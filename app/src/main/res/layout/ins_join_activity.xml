<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sportsv.JoinActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_ins_nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edit_ins_nm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="강사 이름"
                android:inputType="textPersonName"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_ins_google"
            android:textSize="20sp"
            android:text="GooglEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_ins_em"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edit_ins_em"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="강사 이메일주소"
                android:inputType="textEmailAddress"
                android:editable="false"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_ins_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_ins_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:password="true"
                android:focusableInTouchMode="true"
                android:maxLength="40"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <CheckBox
            android:id="@+id/ch_insjoincheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강사 회원가입약관 동의"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_ins_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"/>

        <Button
            android:id="@+id/btn_ins_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입"/>

    </LinearLayout>

</LinearLayout>
