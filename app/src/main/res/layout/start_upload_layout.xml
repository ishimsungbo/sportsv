<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_getvideo"
        android:onClick="mOnClick"
        android:text="유투브 비디오 목록가져오기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_upload"
        android:onClick="mOnClick"
        android:text="업로드하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upload_layout"
        >

        <TextView
            android:id="@+id/tx_upload_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="동영상업로드" />

        <ProgressBar
            android:id="@+id/upload_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tx_upload_title" />

        <TextView
            android:id="@+id/upload_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_progress"
            android:layout_centerHorizontal="true"
            android:text="%" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnUploadCancel"
        android:text="업로드 취소하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>